---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Header -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-10">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <a
          href="/jurado/dashboard"
          class="inline-flex items-center px-3 py-1.5 text-sm border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 mr-1.5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Volver
        </a>
        <h1 class="text-xl font-semibold text-gray-900">Ficha del Proyecto</h1>
      </div>

      <div class="flex items-center space-x-2">
        <span class="text-sm text-gray-500 hidden md:inline"
          >Jurado: María Rodríguez</span
        >
        <div
          class="h-6 w-6 rounded-full bg-green-100 flex items-center justify-center text-green-700"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0z"
            ></path>
          </svg>
        </div>
      </div>
    </div>
  </header>

  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Project Information -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Project Information Card -->
        <section
          class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden"
        >
          <div class="md:flex">
            <!-- Project Poster/Image -->
            <div class="md:w-1/3 bg-green-50">
              <div class="h-64 md:h-full w-full relative overflow-hidden">
                <img
                  src="/placeholder.svg?height=600&width=400"
                  alt="Frailejones: Guardianes del Agua"
                  class="absolute inset-0 w-full h-full object-cover"
                />
              </div>
            </div>

            <!-- Project Details -->
            <div class="p-6 md:p-8 md:w-2/3">
              <div class="flex flex-col h-full justify-between">
                <div>
                  <div class="flex justify-between items-start mb-4">
                    <h2 class="text-2xl font-bold text-gray-900 leading-tight">
                      Frailejones: Guardianes del Agua
                    </h2>
                    <span
                      class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                    >
                      Documental
                    </span>
                  </div>

                  <div class="mb-4">
                    <p class="text-sm text-gray-500 mb-1">Postulante</p>
                    <p class="font-medium text-gray-900">Javier López</p>
                    <p class="text-sm text-gray-600">
                      javier.lopez@productora.co
                    </p>
                  </div>

                  <div class="mb-4">
                    <p class="text-sm text-gray-500 mb-1">Fecha de estreno</p>
                    <p class="font-medium text-gray-900">15/03/2025</p>
                  </div>
                </div>

                <div class="flex space-x-3">
                  <a
                    href="#video"
                    class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4 mr-1.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                      ></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Ver video
                  </a>
                  <a
                    href="#"
                    class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4 mr-1.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                      ></path>
                    </svg>
                    Descargar libreto
                  </a>
                  <a
                    href="#"
                    class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4 mr-1.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                      ></path>
                    </svg>
                    Ver imagen
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Synopsis Section -->
        <section
          class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden"
        >
          <div class="border-b border-gray-200 bg-gray-50 px-6 py-3">
            <h3 class="text-lg font-semibold text-gray-900">Sinopsis</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-700 leading-relaxed">
              "Frailejones: Guardianes del Agua" es un documental que explora el
              papel crucial que juegan estas plantas en los ecosistemas de
              páramo colombianos. A través de impresionantes imágenes y
              entrevistas a científicos, conservacionistas y comunidades
              locales, la obra destaca la importancia de los frailejones en la
              captación y regulación del agua, y las amenazas que enfrentan
              debido al cambio climático, la agricultura y la minería.
            </p>
            <p class="text-gray-700 leading-relaxed mt-4">
              El documental combina tomas aéreas de los páramos con entrevistas
              a expertos y habitantes locales que dependen de estos ecosistemas.
              La narrativa sigue el ciclo del agua desde su captación en los
              frailejones hasta su llegada a las ciudades, destacando la
              conexión vital entre la conservación de los páramos y el
              suministro de agua para millones de colombianos.
            </p>
          </div>
        </section>

        <!-- Video Section -->
        <section
          id="video"
          class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden"
        >
          <div class="border-b border-gray-200 bg-gray-50 px-6 py-3">
            <h3 class="text-lg font-semibold text-gray-900">Video</h3>
          </div>
          <div class="aspect-w-16 aspect-h-9">
            <div class="w-full h-0 pb-[56.25%] relative">
              <iframe
                class="absolute inset-0 w-full h-full"
                src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                title="Frailejones: Guardianes del Agua"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              >
              </iframe>
            </div>
          </div>
        </section>
      </div>

      <!-- Right Column - Evaluation Form -->
      <div>
        <section
          class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden sticky top-20"
        >
          <div class="border-b border-gray-200 bg-gray-50 px-6 py-3">
            <h3 class="text-lg font-semibold text-gray-900">
              Evaluación del Jurado
            </h3>
          </div>
          <div class="p-6">
            <form>
              <!-- Question 1 -->
              <div class="mb-6">
                <label
                  for="q1"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >1. Relevancia del tema para la biodiversidad colombiana</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q1"
                    name="q1"
                    min="1"
                    max="10"
                    value="8"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 2 -->
              <div class="mb-6">
                <label
                  for="q2"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >2. Calidad técnica (imagen, sonido, edición)</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q2"
                    name="q2"
                    min="1"
                    max="10"
                    value="9"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 3 -->
              <div class="mb-6">
                <label
                  for="q3"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >3. Originalidad y creatividad</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q3"
                    name="q3"
                    min="1"
                    max="10"
                    value="7"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 4 -->
              <div class="mb-6">
                <label
                  for="q4"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >4. Narrativa y estructura</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q4"
                    name="q4"
                    min="1"
                    max="10"
                    value="8"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 5 -->
              <div class="mb-6">
                <label
                  for="q5"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >5. Impacto potencial en la audiencia</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q5"
                    name="q5"
                    min="1"
                    max="10"
                    value="9"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 6 -->
              <div class="mb-6">
                <label
                  for="q6"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >6. Rigor científico y precisión</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q6"
                    name="q6"
                    min="1"
                    max="10"
                    value="8"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 7 -->
              <div class="mb-6">
                <label
                  for="q7"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >7. Inclusión de comunidades locales</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q7"
                    name="q7"
                    min="1"
                    max="10"
                    value="7"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 8 -->
              <div class="mb-6">
                <label
                  for="q8"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >8. Valor educativo</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q8"
                    name="q8"
                    min="1"
                    max="10"
                    value="9"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 9 -->
              <div class="mb-6">
                <label
                  for="q9"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >9. Innovación en el formato</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q9"
                    name="q9"
                    min="1"
                    max="10"
                    value="6"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Question 10 -->
              <div class="mb-6">
                <label
                  for="q10"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >10. Valoración general</label
                >
                <div class="flex items-center">
                  <input
                    type="number"
                    id="q10"
                    name="q10"
                    min="1"
                    max="10"
                    value="8"
                    class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-16 sm:text-sm border-gray-300 rounded-md"
                  />
                  <span class="ml-2 text-sm text-gray-500">/ 10</span>
                </div>
              </div>

              <!-- Comments -->
              <div class="mb-6">
                <label
                  for="comments"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Comentarios adicionales</label
                >
                <textarea
                  id="comments"
                  name="comments"
                  rows="3"
                  class="shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 rounded-md"
                  placeholder="Escribe tus comentarios sobre el proyecto..."
                ></textarea>
              </div>

              <!-- Final Score -->
              <div class="mb-6 p-4 bg-gray-50 rounded-lg">
                <div class="flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-700"
                    >Calificación Final</span
                  >
                  <span class="text-2xl font-bold text-green-700">7.9</span>
                </div>
                <p class="mt-1 text-xs text-gray-500">
                  Promedio de los 10 criterios evaluados
                </p>
              </div>

              <!-- Submit Button -->
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors"
                >
                  Enviar votación
                </button>
              </div>
            </form>
          </div>
        </section>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-200 mt-12">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-sm text-gray-500">
          © 2025 Premios Príncipe de los Páramos. Todos los derechos
          reservados.
        </div>
        <div class="mt-4 md:mt-0">
          <a href="#" class="text-sm text-gray-500 hover:text-gray-700 mr-4"
            >Términos y Condiciones</a
          >
          <a href="#" class="text-sm text-gray-500 hover:text-gray-700"
            >Soporte</a
          >
        </div>
      </div>
    </div>
  </footer>

  <!-- JavaScript for Calculating Average Score -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Get all number inputs
      const scoreInputs = document.querySelectorAll('input[type="number"]');
      const finalScoreElement = document.querySelector(
        ".text-2xl.font-bold.text-green-700"
      );

      // Function to calculate average score
      function calculateAverageScore() {
        let total = 0;
        let count = 0;

        scoreInputs.forEach((input) => {
          const value = parseInt(input.value);
          if (!isNaN(value)) {
            total += value;
            count++;
          }
        });

        const average = count > 0 ? total / count : 0;
        finalScoreElement.textContent = average.toFixed(1);
      }

      // Add event listeners to all inputs
      scoreInputs.forEach((input) => {
        input.addEventListener("input", calculateAverageScore);
      });

      // Calculate initial score
      calculateAverageScore();
    });
  </script>
</Layout>
