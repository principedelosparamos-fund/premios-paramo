import { Image } from 'astro:assets'

const supportEntities = [
  {
    name: 'Universidad Central',
    logo: central,
    link: 'https://www.ucentral.edu.co/',
  },
  {
    name: 'Red Colombiana de Escritores Audiovisuales',
    logo: red,
    link: 'https://redescritores.com/',
  },
  {
    name: 'La Colonia Films',
    logo: colonia,
    link: 'https://www.lacoloniafilms.com/',
  },
  {
    name: 'Fundación Corazón de Selva',
    logo: corazon,
    link: 'https://www.instagram.com/corazondeselvacol/',
