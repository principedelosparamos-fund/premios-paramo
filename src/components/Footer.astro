---

<Layout>
  <footer class="border-t border-black bg-white">
    <div class="container mx-auto">
      <div>
        <div class="flex justify-center pt-8">
          <h2 class="text-golddark mb-2 text-xl font-bold">
            Premios Príncipe de los Páramos
          </h2>
        </div>
        <div class="flex justify-center py-2">
          <ul class="flex flex-col flex-wrap gap-4 sm:flex-row">
            {
              importantLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="hover:text-gold flex items-center text-black/70 transition-colors"
                    {...(link.target
                      ? { target: link.target, rel: 'noopener noreferrer' }
                      : {})}
                  >
                    <span set:html={link.icon} />
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="flex justify-center pt-8 pb-6">
        <div class="pb-6">
          <div class="flex justify-center">
            <p class="text-golddark mb-8 pb-5 text-xl font-semibold">
              Entidades que Apoyan
            </p>
          </div>
          <div class="flex flex-wrap justify-center gap-8 sm:gap-4">
            {
              supportEntities.map((entity) => (
                <a
                  href={entity.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex h-16 items-center justify-center rounded-md bg-white/10 p-3 transition-colors hover:bg-white/20"
                  title={entity.name}
                >
                  <Image
                    src={entity.logo}
                    alt={entity.name}
                    class="max-h-full min-h-32"
                  />
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    {/* <!-- Nueva Sección Contáctanos --> */}
    <div class="py-6 text-center">
      <h3 class="text-golddark mb-4 text-lg font-semibold">Contáctanos</h3>
      <div
        class="flex flex-col items-center space-y-3 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-6"
      >
        <a
          href="mailto:principedelosparamos@gmail.com"
          class="hover:text-gold flex items-center text-black/70 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mr-2 h-5 w-5"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
            ></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
            ></path>
          </svg>
          principedelosparamos@gmail.com
        </a>
        <a
          href="https://wa.me/573107805883"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-gold flex items-center text-black/70 transition-colors"
        >
