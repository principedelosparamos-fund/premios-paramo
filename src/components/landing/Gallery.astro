import foto4 from '../../assets/img/lanzamiento/4.jpg'
import foto5 from '../../assets/img/lanzamiento/5.jpg'

//Cineclub
import cine1 from '../../assets/img/cine/1.jpg'
import cine2 from '../../assets/img/cine/2.jpg'
import cine3 from '../../assets/img/cine/3.jpg'
import cine4 from '../../assets/img/cine/4.jpg'

//Lanzamiento evento
import evento from '../../assets/img/premios/1.jpg'
import evento2 from '../../assets/img/premios/2.jpg'
import evento3 from '../../assets/img/premios/3.jpg'
import evento4 from '../../assets/img/premios/4.jpg'
import evento5 from '../../assets/img/premios/5.jpg'
import evento6 from '../../assets/img/premios/6.jpg'

//Velada
import velada from '../../assets/img/velada/01.png'
import velada2 from '../../assets/img/velada/02.jpeg'
import velada3 from '../../assets/img/velada/03.jpg'
import velada4 from '../../assets/img/velada/04.png'
import velada5 from '../../assets/img/velada/05.png'
import velada6 from '../../assets/img/velada/06.jpg'
import velada7 from '../../assets/img/velada/07.png'
import velada8 from '../../assets/img/velada/08.png'
import velada9 from '../../assets/img/velada/09.png'
import velada10 from '../../assets/img/velada/10.png'

import GalleryCard from '../../components/gallery/GalleryCard.tsx'

const imageSet1 = [foto1.src, foto2.src, foto3.src, foto4.src, foto5.src]

const imageSet2 = [cine1.src, cine2.src, cine3.src, cine4.src]

const imageSet3 = [
  evento.src,
  evento2.src,
  evento3.src,
  evento4.src,
  evento5.src,
  evento6.src,
]

const imageSet4 = [
  velada.src,
  velada2.src,
  velada3.src,
  velada4.src,
  velada5.src,
  velada6.src,
  velada7.src,
  velada8.src,
  velada9.src,
  velada10.src,
]
---

<section id="gallery" class="bg-gray-50 py-16 md:py-24">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mx-auto mb-12 max-w-3xl text-center md:mb-16">
      <h2 class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl">Galería</h2>
      <p class="text-lg text-gray-600">Últimos eventos</p>
    </div>

    <div
      class="grid grid-cols-1 items-center gap-6 md:grid-cols-1 lg:grid-cols-2"
    >
      <div
        id="gallery-card-1"
        class="translate-y-6 opacity-0 transition-all delay-200 duration-1500 ease-out"
      >
        <GalleryCard
          images={imageSet3}
          title="Lanzamiento Premios Príncipe de los Páramos"
          client:load
        />
      </div>
      <div
        id="gallery-card-2"
        class="translate-y-6 opacity-0 transition-all delay-400 duration-1500 ease-out"
      >
        <GalleryCard
          images={imageSet1}
          title="Presentación en FICCO"
          client:load
        />
      </div>
      <div
        id="gallery-card-3"
        class="translate-y-6 opacity-0 transition-all delay-600 duration-1500 ease-out"
      >
        <GalleryCard
          images={imageSet2}
          title="Cine Club en Guadalupe, Santander"
          client:load
        />
      </div>
      <div
        id="gallery-card-4"
        class="translate-y-6 opacity-0 transition-all delay-600 duration-1500 ease-out"
      >
        <GalleryCard
          images={imageSet4}
          title="Premios Príncipe de los Páramos 2025"
          client:load
        />
      </div>
    </div>
  </div>
</section>

<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const fadeIn = (id, threshold = 0.1) => {
      const el = document.getElementById(id)
      if (!el) return
      const observer = new IntersectionObserver(
        (entries, obs) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              el.classList.remove('opacity-0', 'translate-y-6')
              el.classList.add('opacity-100', 'translate-y-0')
              obs.unobserve(entry.target) // evita repetición
            }
          })
        },
        { threshold }
      )
      observer.observe(el)
    }

    fadeIn('gallery-card-1')
    fadeIn('gallery-card-2')
    fadeIn('gallery-card-3')
    fadeIn('gallery-card-4')
  })
</script>
